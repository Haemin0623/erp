<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config
3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<settings>
     	<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<typeAliases>
		<typeAlias alias="buyer" type="com.so.erp.model.Buyer" />
		<typeAlias alias="country" type="com.so.erp.model.Country" />
		<typeAlias alias="employee" type="com.so.erp.model.Employee" />
		<typeAlias alias="orderHead" type="com.so.erp.model.OrderHead" />
		<typeAlias alias="orderItem" type="com.so.erp.model.OrderItem" />
		<typeAlias alias="pricing" type="com.so.erp.model.Pricing" />
		<typeAlias alias="product" type="com.so.erp.model.Product" />
		<typeAlias alias="pagingBean" type="com.so.erp.model.PagingBean" />
	</typeAliases>
	<mappers>
		<mapper resource="xml/buyer.xml" />
		<mapper resource="xml/country.xml" />
		<mapper resource="xml/employee.xml" />
		<mapper resource="xml/orderHead.xml" />
		<mapper resource="xml/orderItem.xml" />
		<mapper resource="xml/pricing.xml" />
		<mapper resource="xml/product.xml" />
	</mappers>
	
</configuration>