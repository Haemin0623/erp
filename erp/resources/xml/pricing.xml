<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pricingns">

	<select id="pricingList" resultType="pricing">
		select * from m_pricing
	</select>
	
	<select id="searchList" parameterType="pricing" resultType="pricing" >
		select * from m_pricing
		<where >
			<if test="buyerCd != null or buyerCd != ''" >
				buyerCd = #{buyerCd}
			</if>
			<trim prefixOverrides="and"></trim>
			<if test="productCd != null or productCd != ''">
				productCd = #{productCd}
			</if>
			<trim prefixOverrides="and"></trim>
			<if test="price != null or price != ''">
				price = #{price}
			</if>
			<trim prefixOverrides="and"></trim>
			<if test="validDate != null or validDate != ''">
				startdate <![CDATA[<=]]> #{validDate} and enddate <![CDATA[>=]]> #{validDate}
			</if>
			<trim prefixOverrides="and"></trim>
			<if test="discountrate != null or discountrate != ''">
				discountRate = #{discountRate}
			</if>
			<trim prefixOverrides="and"></trim>
			<if test="currency != null or currency != ''">
				currency = #{currency}
			</if>
			
		</where>
	</select>
	
</mapper>